#!/usr/bin/env bash

# @Study:ST-013 @Study:ST-011 @Study:ST-007 @Study:ST-019
# Simple compliance checker script for preflight

echo "[COMPLIANCE] Running basic compliance checks..."

# Check if required directories exist
required_dirs=("src/backend" "src/frontend" "tests" "docs" "governance/studies")
for dir in "${required_dirs[@]}"; do
    if [ ! -d "$dir" ]; then
        echo "❌ Missing required directory: $dir"
        exit 1
    fi
done

# Check if required files exist
required_files=("pyproject.toml" "README.md" "Dockerfile" "docker-compose.yml")
for file in "${required_files[@]}"; do
    if [ ! -f "$file" ]; then
        echo "❌ Missing required file: $file"
        exit 1
    fi
done

echo "✅ Compliance checks passed"
