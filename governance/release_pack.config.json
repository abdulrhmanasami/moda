{
  "channel": "rc",
  "version": "0.1.0-rc.1",
  "out_dir": "dist",
  "include": [
    "src/frontend/**",
    "src/backend/**",
    "studies/**",
    "tools/governance/**",
    "governance/**",
    "reports/**",
    "SECURITY/**",
    "infrastructure/**",
    "README.md",
    "LICENSE"
  ],
  "exclude": [
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.DS_Store",
    "**/.git/**",
    "dist/**",
    "node_modules/**",
    "**/*.log"
  ],
  "archives": ["zip", "tar.gz"],
  "sbom": {
    "enable": true,
    "format": "cyclonedx-lite"
  },
  "checks": {
    "max_total_mb": 500,
    "require_reports": ["REALITY_TEST.json", "CLAIMS_EVIDENCE.json", "DRIFT_GUARD.json"]
  }
}
